<div class='modal'>
  <button class='closeBtn'></button>
  <section class='film-card'>

    <img class='film-card__poster' src='{{imgUrl}}' alt='film poster' />

    <div class='film-card__thumb'>
      <h2 class='film-card__title'>{{title}}</h2>
      <div>
        <div class='stat'>
          <div class='stat-title'>
            <div class='stat-title-items'>Vote / Votes </div>
            <div class='stat-title-items'>Popularity</div>
            <div class='stat-title-items'>Original_Title</div>
            <div class='stat-title-items'>Genre</div>
          </div>
          <div class='stat-values'>
            <div class='stat-values-items'><span class='highlighted'>{{Vote}}</span>
              /
              {{Votes}}</div>
            <div class='stat-values-items'>{{Popularity}}</div>
            <div class='stat-values-items title'>{{Original_Title}}</div>
            <div class='stat-values-items'>{{Genre}}</div>
          </div>
        </div>
        <h3 class='film-card__about-title'>about</h3>
        <div class='film-card__about'> {{about}}</div>

      </div>
      <div>
        <div class='hero__button-container'>
          <button class='button modal-btn' data-watched='false'>add to Watched</button>
          <button class='button modal-btn' data-queue='false'>add to queue</button>
        </div>
      </div>
    </div>
  </section>
</div>