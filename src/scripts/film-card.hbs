<div class='container'>
  <div class='card'>
    <div class='card__pic'>
      <img src={{imgUrl}} alt='card pic' />
    </div>
    <div class='card__capture'>
      <h3 class='card__title'>
        {{filmTitle}}
      </h3>
      <p class='card__genre'>
        <span>{{filmGenre}}</span>
        |
        <span>{{filmYear}}</span>
      </p>
    </div>
  </div>
</div>